procedure assign(x: Int, y: Int)
  requires x == 0 && y == x
  ensures x == 0 && y == x
{
  pure assert x == 0;
}

procedure assign2(x: Int, y: Int) 
  requires x == 10 && y == 5 
  ensures x == 10 && y == 5
{
  x := 10;
  y := 5;
}

procedure pure1(x: Int)
  requires x == 0
  ensures x == 10
{
  x := 2;
  x := x + 5;
  x := x + 3;
}

