procedure assign(x: Int, y: Int)
  requires x == 0 && y == x
  ensures x == 10 && y == 0
{
  x := 5;
  x := 10;
}

procedure assign2(x: Int, y: Int)
  requires x == 0 && y == 1
  ensures x == 10 && y == 5
{
  x := 5;
  y := 3;
  x := x;
  x := 10;
